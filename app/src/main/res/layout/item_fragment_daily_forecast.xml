<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvDate"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTempMorn"
        android:layout_below="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTempDay"
        android:textStyle="bold"
        android:layout_below="@+id/tvTempMorn"
        android:layout_alignStart="@+id/tvTempMorn" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTempEve"
        android:layout_below="@+id/tvTempDay"
        android:layout_alignStart="@+id/tvTempDay" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTempNight"
        android:layout_below="@+id/tvTempEve"
        android:layout_alignStart="@+id/tvTempEve" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPressure"
        android:layout_below="@+id/tvTempNight"
        android:layout_alignStart="@+id/tvTempNight" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHumidity"
        android:layout_below="@+id/tvPressure"
        android:layout_alignStart="@+id/tvPressure" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWind"
        android:layout_below="@+id/tvHumidity"
        android:layout_alignStart="@+id/tvHumidity" />


    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:layout_below="@+id/ivIcon"
        android:layout_alignEnd="@+id/ivIcon" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:id="@+id/tvCity" />

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLastUpdate"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/iconWindItem"
        android:layout_alignBottom="@+id/tvWind"
        android:layout_toEndOf="@+id/tvWind" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/no_image"
        android:id="@+id/ivIcon"
        android:layout_below="@+id/tvCity"
        android:layout_alignParentEnd="true" />

</RelativeLayout>